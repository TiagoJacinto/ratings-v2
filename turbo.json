{
	"$schema": "https://turborepo.com/schema.json",
	"ui": "tui",
	"tasks": {
		"generate:openapi-spec": {
			"dependsOn": ["^generate:openapi-spec"],
			"inputs": ["$TURBO_DEFAULT$"]
		},
		"generate:openapi-spec:dev": {
			"persistent": true
		},
		"generate:api-sdk": {
			"dependsOn": ["^generate:openapi-spec", "^generate:api-sdk"],
			"inputs": ["$TURBO_DEFAULT$"]
		},
		"generate:api-sdk:dev": {
			"dependsOn": ["^generate:openapi-spec"],
			"persistent": true,
			"with": ["generate:openapi-spec:dev"]
		},

		"build": {
			"dependsOn": ["^generate:api-sdk", "^build"],
			"inputs": ["$TURBO_DEFAULT$", ".env*"],
			"outputs": [".next/**", "!.next/cache/**"]
		},

		"start:dev": {
			"dependsOn": ["^generate:api-sdk"],
			"cache": false,
			"persistent": true,
			"with": ["generate:api-sdk:dev"]
		},

		"types:check": {
			"dependsOn": ["^types:check"]
		},

		"format:check": {
			"dependsOn": ["^format:check"]
		},
		"format:fix": {
			"dependsOn": ["^format:fix"]
		},

		"lint:check": {
			"dependsOn": ["^lint:check"]
		},
		"lint:fix": {
			"dependsOn": ["^lint:fix"]
		},
		"lint:fix:eslint": {
			"dependsOn": ["^lint:fix:eslint"]
		},
		"lint:fix:eslint:pre-commit": {
			"dependsOn": ["^lint:fix:eslint:pre-commit"]
		},

		"quality:check": {
			"dependsOn": ["^quality:check"]
		},
		"quality:fix": {
			"dependsOn": ["^quality:fix"]
		},

		"test:unit": {
			"dependsOn": ["^test:unit"]
		},
		"test:unit:pre-commit": {
			"dependsOn": ["^test:unit:pre-commit"]
		},
		"test:unit:features": {
			"dependsOn": ["^test:unit:features"]
		},
		"test:e2e": {
			"dependsOn": ["^test:e2e"]
		},
		"test:e2e:features": {
			"dependsOn": ["^test:e2e:features"]
		}
	}
}
